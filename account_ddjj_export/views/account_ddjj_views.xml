<odoo>
  <data>
    <!-- Vista de formulario para el modelo account.ddjj -->
    <record model="ir.ui.view" id="view_account_ddjj_form">
      <field name="name">account.ddjj.form</field>
      <field name="model">account.ddjj</field>
      <field name="arch" type="xml">
        <form string="Account DDJJ">
          <header>
            <button name="export_txt" type="object" string="Exportar TXT" class="btn-primary"/>
          </header>
          <sheet>
            <group>
              <field name="name"/>
              <group>
                <field name="simple_mode"/>
              </group>
              <group attrs="{'invisible': [('simple_mode', '=', False)]}">
                  <field name="month"/>
                  <field name="year"/>
              </group>
              <group attrs="{'invisible': [('simple_mode', '=', True)]}">
                  <field name="date_start"/>
                  <field name="date_end"/>
              </group>
              <field name="municipalidad"/>
              <field name="apuntes_a_mostrar"/>
              <group>
                <!-- Select para SICORE -->
                <field name="apuntes_sicore" invisible="municipalidad != 'sicore'"/>
                <!-- Select para AGIP (Caba) -->
                <field name="apuntes_caba" invisible="municipalidad != 'caba'"/>
                <!-- Select para Jujuy -->
                <field name="apuntes_jujuy" invisible="municipalidad != 'jujuy'"/>
                <!-- Select para Tucumán -->
                <field name="apuntes_tucuman" invisible="municipalidad != 'tucuman'"/>
              </group>
              <field name="apunte_ids"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Vista de lista para el modelo account.ddjj -->
    <record model="ir.ui.view" id="view_account_ddjj_tree">
      <field name="name">account.ddjj.tree</field>
      <field name="model">account.ddjj</field>
      <field name="arch" type="xml">
        <tree string="Account DDJJ">
          <field name="name"/>
          <field name="date_start"/>
          <field name="date_end"/>
          <field name="municipalidad"/>
        </tree>
      </field>
    </record>

    <!-- Acción para el modelo account.ddjj -->
    <record model="ir.actions.act_window" id="action_account_ddjj">
      <field name="name">Account DDJJ</field>
      <field name="res_model">account.ddjj</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Menú de contabilidad -->
    <menuitem id="menu_account_ddjj_root" name="DDJJ" parent="account.menu_finance" sequence="10"/>
    <menuitem id="menu_account_ddjj" name="DDJJ" parent="menu_account_ddjj_root" action="action_account_ddjj"/>
  </data>
</odoo>