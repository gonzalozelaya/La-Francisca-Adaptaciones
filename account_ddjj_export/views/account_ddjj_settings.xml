<odoo>
    <!-- Vista de Configuración del Módulo -->
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">account.ddjj.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="15"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="Account DDJJ Settings" string="Account DDJJ Settings" name="account_ddjj_settings">
                    <block title="Configuración de DDJJ de Cuentas" name="account_ddjj_block">
                        <setting string="Grupo de Impuestos"
                                 help="Seleccione el grupo de impuestos"
                                 id="tax_group_setting">
                            <field name="tax_group_id"/>
                        </setting>
                        <setting string="Cuenta del Plan de Cuentas"
                                 help="Seleccione la cuenta del plan de cuentas"
                                 id="account_setting">
                            <field name="account_id"/>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>

    <!-- Acción para abrir la vista de configuración -->
    <record id="action_account_ddjj_settings" model="ir.actions.act_window">
        <field name="name">Configuración de DDJJ de Cuentas</field>
        <field name="res_model">account.ddjj.settings</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="res_config_settings_view_form"/>
        <field name="target">new</field>
    </record>

    <!-- Menú para acceder a la configuración -->
    <menuitem id="menu_account_ddjj_settings" 
              name="Configuración de DDJJ de Cuentas"
              parent="base.menu_configuration"
              action="action_account_ddjj_settings"/>
</odoo>